<section 
  {{#if cover}}
  style="background-image:url('{{cover}}')"
  {{else}}
  style="background-image:url('https://timelinecovers.pro/covers-images/download/business-software-coding-code-igniter.jpg')"
  {{/if}}
 class="container">

 <button id="coverEdit" >EDITAR</button>
  
  {{#if photoURL}}
  <div class="pic">
    <div id="editPic">EDITAR</div>
    <img src="{{photoURL}}" alt="{{username}}">
  </div>
  
  {{else}}
  <div class="pic">
    <div id="editPic" >EDITAR</div>
    <img 
      src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQopX4_8IGscQTYwpSREOzeW8NHwcArkMkOl3Y1q_EBSiVNCftbvw" 
      alt="{{username}}"
    >
  </div>
  {{/if}}

</section>
<section class="info">
  <form action="/profile" method="post" enctype="multipart/form-data" >
    <input value="{{username}}" name="username" type="text">
    <br>
    <input value="{{email}}" name="email" type="text">
    <input name="cover" id="fileInput" hidden type="file" accept="image/*">
    <input name="photoURL" id="photoInput" hidden type="file" accept="image/*">
  </form>
</section>


<script>
  //listener para el click
  document
    .getElementById('coverEdit')
    .addEventListener('click', function(){
      document.getElementById('fileInput').click()
  })
  //listener para DESPUES de seleccionar la imagen
  document
    .getElementById('fileInput')
    .addEventListener('change', function(){
      document.querySelector('form').submit()
    })

    //listener for the photourl
    document
      .getElementById('editPic')
      .addEventListener('click', function(){
        document.getElementById('photoInput').click()
      })
    //listener para DESPUES de seleccionar la imagen
  document
    .getElementById('photoInput')
    .addEventListener('change', function(){
      document.querySelector('form').submit()
    })

</script>